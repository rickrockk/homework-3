{
  "compilerOptions": {
    "outDir": "./build/",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "isolatedModules": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "baseUrl": "src",
    "paths": {
      "app": ["app/*"],
      "entities": ["entities/*"],
      "features": ["features/*"],
      "helpers": ["helpers/*"],
      "pages": ["pages/*"],
      "shared": ["shared/*"],
      "widgets": ["widgets/*"],
      "config": ["config/*"],
      "styles": ["styles/*"],
      "utils": ["utils/*"]
    }
  },
  "include": ["src"]
}
